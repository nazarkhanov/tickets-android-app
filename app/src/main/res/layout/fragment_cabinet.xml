<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cabinet.CabinetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:layout_marginVertical="@dimen/spacing_4xl">

        <com.tickets.widgets.MenuItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_bookings_24dp"
            app:text="Мои бронирования" />

        <com.tickets.widgets.MenuItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_tickets_24dp"
            app:text="Мои билеты" />

        <com.tickets.widgets.MenuItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_support_24dp"
            app:text="Поддержка" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/spacing_lg"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:background="@color/black"
            android:alpha="0.08" />

        <com.tickets.widgets.MenuItemView
            android:id="@+id/nav_item_routes"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_bus_24dp"
            app:text="Поездки" />

        <com.tickets.widgets.MenuItemView
            android:id="@+id/nav_item_tours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_travel_24dp"
            app:text="Туры" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>